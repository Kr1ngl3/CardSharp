<UserControl
    x:Class="CardSharp.Views.GameView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c="clr-namespace:CardSharp.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:m="clr-namespace:CardSharp.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:CardSharp.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="1200"
    x:DataType="vm:GameViewModel"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DrawingImage x:Key="SuitHeart">
            <DrawingGroup>
                <GeometryDrawing Brush="White" Geometry="M108 65c-22 0-25 22-25 22s-3-22-25-22c-15 0-29 10-29 29 0 24 44 49 54 86 9-37 55-62 55-86 0-19-14-29-30-29z" />
            </DrawingGroup>
        </DrawingImage>
    </UserControl.Resources>
    <c:Table Background="Blue">
        <c:CardControl />
        <c:CardControl Canvas.Top="20" />
    </c:Table>
</UserControl>
